# Shell scripts should always use LF line endings
*.sh text eol=lf

# Python files
*.py text eol=lf

# Docker files
Dockerfile text eol=lf
docker-compose.yml text eol=lf
docker-compose.yaml text eol=lf

# Configuration files
*.conf text eol=lf
*.ini text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# JSON files
*.json text eol=lf

# Environment files
.env text eol=lf
.env.* text eol=lf